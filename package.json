{
  "name": "wally-sdk",
  "version": "0.0.2",
  "description": "Connector lib for wallet-api",
  "license": "ISC",
  "author": "Wally <contact@wally.xyz>",
  "repository": "Wally-xyz/wallet-connector",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc --project .",
    "watch": "./node_modules/.bin/tsc --watch --project .",
    "build:test_page": "./node_modules/.bin/tsc --project . --outDir test_page/public/sdk/dist",
    "build:test_page:watch": "./node_modules/.bin/tsc --watch --project . --outDir test_page/public/sdk/dist",
    "build:demo": "./node_modules/.bin/tsc --project . --outDir demo/public/sdk",
    "build:demo:watch": "./node_modules/.bin/tsc --watch --project . --outDir demo/public/sdk",
    "build:clean": "rimraf dist && yarn build",
    "lint": "eslint src/** demo/pages/** demo/components/** --cache --ext js,ts,jsx,tsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint .",
    "*.{js,css,md,jsx,tsx}": "prettier --write"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.7.2",
    "@types/node": "^18.11.9"
  }
}
