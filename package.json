{
  "name": "wallet-connector",
  "version": "0.0.1",
  "description": "Connector lib for wallet-api",
  "license": "ISC",
  "author": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc --project .",
    "watch": "./node_modules/.bin/tsc --watch --project .",
    "build:test_page": "./node_modules/.bin/tsc --project . --outFile test_page/public/sdk/dist/index.js",
    "build:test_page:watch": "./node_modules/.bin/tsc --watch --project . --outFile test_page/public/sdk/dist/index.js",
    "build:demo": "./node_modules/.bin/tsc --project . --outFile demo/public/sdk/index.js",
    "build:demo:watch": "./node_modules/.bin/tsc --watch --project . --outFile demo/public/sdk/index.js",
    "build:clean": "rimraf dist && yarn build",
    "lint": "eslint . --cache --ext js,ts,jsx,tsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint .",
    "*.{js,css,md,jsx,tsx}": "prettier --write"
  }
}
